			# Update systemd and enable new services
			systemctl daemon-reload
			systemctl enable nxdngateway.timer
			systemctl enable nxdnparrot.timer
			Message="Upgraded from ${pistarCurVersion} to 3.4.12..."
			echo $Message
			exec "$0" "$@"
                        exit 1
		else
